<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.lol.contacts"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.READ_CALL_LOG"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.WRITE_CONTACTS"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.CALL_PHONE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.MainActivity"/>
        <activity android:name=".activity.IntimacyActivity"/>
        <activity android:name=".activity.DetailActivity"/>
        <activity android:name=".activity.ModifyActivity"/>
        <activity android:name=".activity.gdfg"/>
        <activity android:name=".clipCircleImage.ClipHeaderActivity"/>
        <activity android:name=".activity.GuideActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".activity.AddContactActivity"/>

        <service
            android:name=".service.IntimacyDegreeService"
            android:enabled="true"/>

    </application>

</manifest>