<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:zhy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.lol.contacts.utils.raindrop.RainView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
    <LinearLayout
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/ll_pagecontent_usermsgcenter">
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/iv_pagecontent_userimgcenter"
                />
            <ImageView
                android:layout_width="102dp"
                android:layout_height="102dp"
                android:id="@+id/iv_pagecontent_ringcenter"
                android:background="@drawable/logo_breath"
                />
        </FrameLayout>

        <TextView
            android:id="@+id/tv_pagecontent_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="张三丰1"
            android:layout_gravity="center"
            android:textColor="#fff"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="8dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/iv_pagecontent_userimg2"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="张三丰2"
            android:layout_gravity="center"
            android:textColor="#fff"
            android:id="@+id/tv_pagecontent_name2"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="4dp">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/iv_pagecontent_userimg3"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="张三丰3"
            android:layout_gravity="center"
            android:textColor="#fff"
            android:id="@+id/tv_pagecontent_name3"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_below="@+id/ll_pagecontent_usermsgcenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="20dp"
        android:id="@+id/ll_pagecontent_usermsg4">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/iv_pagecontent_userimg4"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="张三丰4"
            android:layout_gravity="center"
            android:textColor="#fff"
            android:id="@+id/tv_pagecontent_name4"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_above="@+id/ll_pagecontent_usermsgcenter"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="60dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/ll_pagecontent_usermsg7">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/iv_pagecontent_userimg7"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="张三丰7"
            android:layout_gravity="center"
            android:textColor="#fff"
            android:id="@+id/tv_pagecontent_name7"
            />
    </LinearLayout>

    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="60dp"
        android:layout_toRightOf="@id/ll_pagecontent_usermsg7"
        >

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/iv_pagecontent_userimg5"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="张三丰5"
            android:layout_gravity="center"
            android:textColor="#fff"
            android:id="@+id/tv_pagecontent_name5"
            />
    </LinearLayout>



    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="80dp"
        android:layout_below="@+id/ll_pagecontent_usermsgcenter"
        android:layout_toRightOf="@id/ll_pagecontent_usermsg4"
        android:id="@+id/ll_pagecontent_usermsg6">
        <com.lol.contacts.view.CustomImageView
            android:id="@+id/iv_pagecontent_userimg6"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:padding="3dp"
            zhy:src="@drawable/mm"
            zhy:type="circle"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="张三丰6"
            android:layout_gravity="center"
            android:textColor="#fff"
            android:id="@+id/tv_pagecontent_name6"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:textSize="20sp"
        android:id="@+id/tv_pagecontent_pagenum"/>

</RelativeLayout>