<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lol.contacts.activity.GuideActivity">

    <com.lol.contacts.view.GuideViewpager
        android:id="@+id/vp_sflash_guidepage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    </com.lol.contacts.view.GuideViewpager>

    <Button
        android:id="@+id/bt_guide_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/material_blue_grey_800"
        android:background="@drawable/button_guide_background"
        android:text="导入通讯录"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="75dp"
        android:visibility="invisible"
        />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/pb_guide_inittable"
        android:layout_marginBottom="10dp"
        android:layout_above="@+id/bt_guide_input"
        android:visibility="invisible"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
